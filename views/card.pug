extends layout

block content
    div.card
        h3.title Insurance Man Insurance
        div.info-row.name-row
            p.label Name:
            p #{firstName}, #{lastName}
            div.info-container
                div.info-row
                    p.label Insurance Type:
                    p#{type}
                    div.info-row
                        p.label IMI
                        p #{dateOfBirth.getMonth()+1/#{dateOfBirth.getDate()}/#{dateOfBirth.getFullYear()}
                        div.info-row
                            div
                                p.label Address:

                            div.address-text
                                p #{addressLine1}
                                p #{addressLine2}
                                p #{city}, #{state}, #{zip}
                            div.info-container
                                div.info-row
                                    p.label Acct #:
                                    p #{accountNumber}
                                    div.info-container
                                        div.info-row
                                            p.label Acct #
                                            p #{accountNumber}
                                    div.info-row
                                        p.label Exp.:
                                        p #{currentDate.getMonth()+1}/#{currentDate.getFullYear()+4}